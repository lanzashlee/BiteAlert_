  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "@googlemaps/js-api-loader": "^1.16.10",
    "@react-three/fiber": "^8.15.19",
    "@sendgrid/mail": "^8.1.6",
    "axios": "^1.6.0",
    "bcrypt": "^5.0.1",
    "bootstrap": "^5.3.8",
    "chart.js": "^4.5.0",
    "chartjs-plugin-datalabels": "^2.2.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "framer-motion": "^12.23.12",
    "jspdf": "^3.0.3",
    "jspdf-autotable": "^5.0.2",
    "lucide-react": "^0.542.0",
    "mongodb": "^6.16.0",
    "mongoose": "^7.5.0",
    "nodemailer": "^7.0.3",
    "react": "18.2.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "18.2.0",
    "react-router-dom": "^6.8.0",
    "react-scripts": "^5.0.1",
    "serve": "^14.2.1",
    "three": "^0.179.1",
    "web-vitals": "^2.1.4",
    "ws": "^8.18.1"
  },
  "scripts": {
    "start": "set PORT=3002 && react-scripts start",
    "server": "set API_PORT=4000 && nodemon server.js",
    "dev": "concurrently \"npm run start\" \"npm run server\"",
    "build": "react-scripts build && npm run copy-redirects",
    "build:fast": "GENERATE_SOURCEMAP=false react-scripts build && npm run copy-redirects",
    "copy-redirects": "node -e \"const fs=require('fs'); fs.copyFileSync('public/_redirects', 'build/_redirects'); fs.copyFileSync('public/404.html', 'build/404.html'); fs.copyFileSync('public/vercel.json', 'build/vercel.json')\"",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "server:prod": "node server.js"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.14"
  }
}
