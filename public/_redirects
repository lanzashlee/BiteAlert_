# Handle client-side routing for React Router
# This ensures all routes are served by index.html for React Router to handle

# API routes should not be redirected
/api/*  /api/:splat  200

# Static assets should be served directly
/static/*  /static/:splat  200
/img/*  /img/:splat  200
/favicon.ico  /favicon.ico  200
/manifest.json  /manifest.json  200
/asset-manifest.json  /asset-manifest.json  200

# Specific routes that should redirect to index.html
/dashboard  /index.html  200
/patients  /index.html  200
/centers  /index.html  200
/reports  /index.html  200
/analytics  /index.html  200
/admin  /index.html  200
/login  /index.html  200
/register  /index.html  200

# All other routes should serve index.html for React Router
/*    /index.html   200